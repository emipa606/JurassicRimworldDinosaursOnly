<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>TroodonVenomBite</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>venemous bite</label>
    <description>A bite dripping with venom. Said venom can cause loss of consciousness, mental breaks and eventual death if left untreated.</description>
    <lethalSeverity>1</lethalSeverity>
    <scenarioCanAdd>true</scenarioCanAdd>
    <tendable>true</tendable>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>12</baseTendDurationHours>
        <severityPerDayTended>-0.20</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Immunizable">
        <immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
        <immunityPerDaySick>0.12</immunityPerDaySick>
        <severityPerDayNotImmune>0.137</severityPerDayNotImmune>
        <severityPerDayImmune>-0.27</severityPerDayImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.2</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.3</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.35</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <lifeThreatening>true</lifeThreatening>
        <deathMtbDays>0.5</deathMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.75</setMax>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>0.0002</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>
</Defs>