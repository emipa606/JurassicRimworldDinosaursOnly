<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>DinoChitin</defName>
    <label>bygone chitin</label>
    <description>Overlapping plates of exoskeleton that belong to prehistoric insects. Strong, durable, but somewhat flammable.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Chitin/ChitinWeak</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>2.0</MarketValue>
      <Mass>0.5</Mass>
      <StuffPower_Armor_Sharp>0.9</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.45</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.80</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>1</SharpDamageMultiplier>
      <BluntDamageMultiplier>1</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>1.00</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(96,65,49)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0.4</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>
  <ThingDef ParentName="ResourceBase">
    <defName>DinoChitinStrong</defName>
    <label>ancient chitin</label>
    <description>Overlapping plates of exoskeleton that belong to prehistoric insects. Black in colour, it glistens like a crystal. It is less flammable than other types of chitin, and loyally protects the wearer.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Chitin/ChitinStrong</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>2.0</MarketValue>
      <Mass>0.5</Mass>
      <StuffPower_Armor_Sharp>1.8</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.90</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>1.6</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>4</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>2</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>2</SharpDamageMultiplier>
      <BluntDamageMultiplier>2</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.5</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(53,46,43)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>2</MaxHitPoints>
        <Beauty>2</Beauty>
        <Flammability>0.2</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>
</Defs>
